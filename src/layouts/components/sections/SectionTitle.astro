---
export interface Props {
  title: string;
  subtitle: string;
  hasAI?: boolean;
  aiIcon?: string;
}

const {
  title,
  subtitle,
  hasAI = false,
  aiIcon = "/src/assets/images/docflowone/IA-icon.png",
} = Astro.props;
---

<div class="text-center">
  <h3
    class="flex items-center justify-center gap-3 text-xl font-light text-white md:text-3xl">
    {title}
    {
      hasAI && (
        <img
          src={aiIcon}
          alt="IA"
          class="inline-block h-10 w-10 object-contain md:h-10 md:w-10"
        />
      )
    }
  </h3>
  <p
    class="mx-8 mt-3 max-w-2xl text-sm leading-relaxed text-gray-300 md:mx-auto md:text-lg">
    {subtitle}
  </p>
</div>
